<%# User詳細ページ %>
<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
         <%= "#{@tester.nickname}さんの情報" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @tester.first_name %></td>
          </tr>
          <tr>
            <th class="table__col1">郵便番号</th>
            <td class="table__col2"><%= @tester.postal_code %></td>
          </tr>
          <tr>
            <th class="table__col1">住所</th>
            <td class="table__col2"><%= @tester.address %></td>
          </tr>
          <tr>
            <th class="table__col1">電話番号</th>
            <td class="table__col2"><%= @tester.phone_number %></td>
          </tr>

        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@tester.nickname}さんのテスト中製品"%>
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <%# collection: 繰り返し表示する要素が入っているインスタンス %>
        <%# コントローラの@prototypesの定義を消してcollection: @user.prototypes と入力しても可能%>
        
      </div>
    </div>
  </div>
</div>