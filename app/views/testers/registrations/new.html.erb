<%= render "shared/second-header"%>

<%= form_with model: @tester, url: tester_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
  <%= render "testers/shared/error_messages", resource: resource %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%= render "testers/shared/error_messages", model: f.object %>
<%# ニックネーム %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :nickname, class:"input-default", id:"nickname" %>
    </div>
  </div>

  <%# Eメールアドレス %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
  </div>

  <%# パスワード %>
  <div class="form-group">
    <div class='form-text-wrap'>
     <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
  </div>

  <%# 再確認用パスワード %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
  </div>

  <%# 氏名 %>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
      <%= f.text_field :first_name, class:"input-name", id:"firtst-name", placeholder:"例) 太郎" %>
    </div>
  </div>


<%# 氏名(カナ) %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名（カナ）</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_field :first_name_kana, class:"input-name", id:"firtst-name_kana", placeholder:"例) タロウ" %>
    </div>
  </div>

<%# 性別 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">性別</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"sex"}) %>
    </div>
  </div>

<%# 誕生日 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
        f.date_select(
          :birth_date,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          start_year: 1930,
          end_year: (Time.now.year - 5),
          date_separator: '%s'),
        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

<%# 郵便番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">郵便番号</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :postal_code, class:"input-name", id:"postal-code", placeholder:"ハイフンなし" %>
    </div>
  </div>

<%# 都道府県 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">都道府県</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
    </div>
  </div>

<%# 市区町村 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">市区町村</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :city, class:"input-default", id:"city" %>
    </div>
  </div>

<%# 番地 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">番地</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :address, class:"input-default", id:"address" %>
    </div>
  </div>

<%# 建物 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">建物</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :building, class:"input-default", id:"building" %>
    </div>
  </div>

<%# 電話番号 %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">電話番号</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number" %>
        <p class='info-text'>※市外局番を含みハイフンなし</p>
      </div>
    </div>

  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
<% end %>
