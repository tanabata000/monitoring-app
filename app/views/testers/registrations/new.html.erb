<h2>Sign up</h2>

<%= form_with model: @tester, url: tester_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
  <%= render "testers/shared/error_messages", resource: resource %>

<%# ニックネーム %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :nickname, class:"input-name", id:"nickname" %>
    </div>
  </div>

  <%# Eメールアドレス %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%# パスワード %>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <%# 再確認用パスワード %>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%# 氏名 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
      <%= f.text_field :first_name, class:"input-name", id:"firtst-name", placeholder:"例) 太郎" %>
    </div>
  </div>

<%# 氏名(カナ) %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名（カナ）</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_field :first_name_kana, class:"input-name", id:"firtst-name_kana", placeholder:"例) タロウ" %>
    </div>
  </div>

<%# 性別 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">性別</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"sex"}) %>
    </div>
  </div>

<%# 誕生日 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">誕生日</label>
    </div>
    <div class='input-name-wrap'>
      <%= raw sprintf(
        f.date_select(
          :birth_date,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          start_year: 1930,
          end_year: (Time.now.year - 5),
          date_separator: '%s'),
        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

<%# 郵便番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">郵便番号</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :postal_code, class:"input-name", id:"postal-code", placeholder:"ハイフンなし" %>
    </div>
  </div>

<%# 都道府県 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">都道府県</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
    </div>
  </div>

<%# 市区町村 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">市区町村</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :city, class:"input-name", id:"city" %>
    </div>
  </div>

<%# 番地 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">番地</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :address, class:"input-name", id:"address" %>
    </div>
  </div>

<%# 建物 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">建物</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :building, class:"input-name", id:"building" %>
    </div>
  </div>

<%# 電話番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :phone_number, class:"input-name", id:"phone-number" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "testers/shared/links" %>
