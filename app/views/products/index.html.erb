<%= render "shared/header" %>
<%# 説明文 %>
<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>
<%# /説明文 %>

<%# 製品一覧表示 %>
<% @products.each do |product| %>
  <%# if product.present? == true %>
    <%# if @products.pd_stock =! 0 %>
      <li class='list'>            
        <%# 商品詳細画面に遷移 %>
        <%= link_to product_path(product.id),method: :get do %>
          <div class='product-img-content'>
            <%# 商品の画像を表示 %>
            <%= image_tag product.pd_image,class: "pd-img" %>
            <%# 商品購入済みの場合sold outを表示 %>
            <%# if product.tester.present? == true%>
              <div class='test-out'>
                <span>テスト済み!!</span>
              </div>
            <%# end %>
        <% end %>
    <%# end %>
  <%# end %>
<% end %>

<%# /製品一覧表示 %>

<%# 出品ボタン %>
<div>
<%= link_to(new_product_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
</div>