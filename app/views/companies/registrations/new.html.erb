<%= render "shared/second-header"%>

<%= form_with model: @company, url: company_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      法人会員情報入力
    </h1>
  </div>

  <%= render "companies/shared/error_messages", model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
  </div>

  <%# パスワード %>
  <div class="form-group">
    <div class='form-text-wrap'>
     <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
  </div>

  <%# 再確認パスワード %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
  </div>

  <%# 企業ロゴ画像 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">会社ロゴ</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.file_field :company_image, id:"company-image" %>
      <p class='info-text'>※クリックしてファイルをアップロード</p>
    </div>
  </div>

  <%# 会社名 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">会社名(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :company_name, class:"input-default", id:"company-name", placeholder:"例) 株式会社〇〇" %>
    </div>
  </div>
<%# 会社名(カナ) %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">会社名(カナ)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :company_name_kana, class:"input-default", id:"company-name-kana", placeholder:"例) カブシキガイシャ〇〇" %>
    </div>
  </div>

  <%# 担当部署 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当部署</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :department, class:"input-default", id:"department", placeholder:"例) 開発製品試験課" %>
    </div>
  </div>

  <%# 郵便番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">郵便番号</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :postal_code, class:"input-name", id:"postal_code" %>
      <p class='info-text'>※ハイフンなし</p>
    </div>
  </div>

  <%# 都道府県 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">都道府県</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
    </div>
  </div>

  <%# 市区町村 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">市区町村</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :city, class:"input-default", id:"city" %>
    </div>
  </div>

  <%# 番地 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">番地</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :address, class:"input-default", id:"address" %>
    </div>
  </div>

  <%# 建物 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">建物</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :building, class:"input-default", id:"building" %>
    </div>
  </div>

  <%# 電話番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当部署の連絡先</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :phone_number, class:"input-default", id:"phone_number" %>
      <p class='info-text'>※市外局番を含みハイフンなし</p>
    </div>
  </div>

  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
<% end %>


