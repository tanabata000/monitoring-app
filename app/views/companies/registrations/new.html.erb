<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "companies/shared/error_messages", resource: resource %>
  
  <%# Eメール %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%# パスワード %>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <%# 再確認パスワード %>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%# 会社名 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">会社名(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :company_name, class:"input-name", id:"company-name", placeholder:"例) 株式会社〇〇" %>
      <%= f.text_area :company_name_kana, class:"input-name", id:"company-name-kana", placeholder:"例) カブシキガイシャ〇〇" %>
    </div>
  </div>

<%# 担当部署 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当部署</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :department, class:"input-name", id:"department", placeholder:"例) 開発製品試験課" %>
    </div>
  </div>

<%# 郵便番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">郵便番号</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :postal_code, class:"input-name", id:"postal_code", placeholder:"ハイフンなし" %>
    </div>
  </div>

<%# 都道府県 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">都道府県</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :prefecture_id, class:"input-name", id:"prefecture-id" %>
    </div>
  </div>

<%# 市区町村 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">市区町村</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :city, class:"input-name", id:"city" %>
    </div>
  </div>

<%# 番地 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">番地</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :address, class:"input-name", id:"address" %>
    </div>
  </div>

<%# 建物 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">建物</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :building, class:"input-name", id:"building", placeholder:"例) 株式会社〇〇" %>
    </div>
  </div>

<%# 電話番号 %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当部署の連絡先</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :phone_number, class:"input-name", id:"phone_number", placeholder:"市外局番を含みハイフンなし" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "companies/shared/links" %>
