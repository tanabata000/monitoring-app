 
<%= form_with model: @review, url: test_product_info_reviews_path, method: :post, class: 'registration-main', local: true do |f| %>
    <div class="field">
      <%= f.label :good_review, "良い点" %><br />
      <%= f.text_area :good_review, id:"pd-name" %>
    </div>
    <div class="field">
      <%= f.label :bad_review, "悪い点（改善点）" %><br />
      <%= f.text_area :bad_review, id:"bad-review" %>
    </div>
    <div class="field">
      <%= f.label :opinions_requests, "意見要望" %><br />
      <%= f.text_area :opinions_requests, id:"opinions-requests" %>
    <div class="actions">
      <%= f.submit "評価する", class: :form__btn  %>
    </div>
<% end %>