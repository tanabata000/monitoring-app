
<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
         <%= "#{@tester.nickname}さんの評価" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">良い評価</th>
            <td class="table__col2"><%= @review.good_review %></td>
          </tr>
          <tr>
            <th class="table__col1">悪い評価</th>
            <td class="table__col2"><%= @review.bad_review %></td>
          </tr>
          <tr>
            <th class="table__col1">意見・要望</th>
            <td class="table__col2"><%= @review.opinions_requests %></td>
          </tr>
        </tbody>
      </table>
      <div class='form-text-wrap'>
        <label class="form-text"><%= "#{@tester.nickname}さんのレビュー評価"%></label>
      </div>
      <%= form_with model: @review_on_review, url: test_product_info_review_on_reviews_path, method: :post, class: 'registration-main', local: true do |f| %>
        <div class='input-name-wrap'>
          <%= f.collection_select(:review_category_id, ReviewCategory.all, :id, :name,  {}, {class:"select-box", id:"review_category"}) %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>